function show_all_calls() {
  sudo asterisk -r -x 'core show channels'
}

function hangup_all_calls() {
  show_all_calls | awk '{print $1}' | grep SIP | while read NAME; do sudo asterisk -r -x "channel request hangup $NAME"; done
}

