#!/bin/bash
set -e

echo 'This will -> stop all running voice daemons, -> CLEAR'
echo 'all uncommited changes, -> pull the GH repos, -> bundle'
echo 'their gems and finally -> restart the ruby-processes.'

read -q "response?Are you sure? [y/N] "
if [[ $response =~ ^(Y|y)$ ]]; then
  svda
  ls -1d /opt/voice-* | while read name; do cd $name; grh; git pull; bundle install; done
  svua
fi
