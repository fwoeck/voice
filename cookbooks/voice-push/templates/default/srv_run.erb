#!/bin/bash
set -e

source <%= node[:rvm][:basedir] %>/scripts/rvm

export TZ=UTC
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export JAVA_OPTS='-Xms512m -Xmx2096m'
export RAILS_ENV=<%= node[:etc][:railsenv] %>
export JRUBY_OPTS='<%= node[:jruby][:opts] %> -J-Djruby.compile.invokedynamic=true'

cd <%= node[:voice_push][:basedir] %>
exec chpst -u <%= node[:wim][:user] %> ./goliath.rb -s<%= node[:roles].include?('desktop') ? 'v' : '' %> -e production -a <%= node[:voice_push][:host] %> -p <%= node[:voice_push][:port] %> 2>&1
