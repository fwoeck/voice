daemon           on;
user             <%= node[:wim][:user] %> <%= node[:wim][:group] %>;
error_log        logs/error.log warn;
worker_processes 1;

env JDK_HOME;
env JAVA_HOME;
env JAVA_OPTS;
env JRUBY_OPTS;

events {
  worker_connections 1024;
  use epoll;
}

http {
  include       mime.types;
  default_type  application/octet-stream;
  server_tokens off;

  log_format main '$http_x_forwarded_for - $remote_user [$time_local] '
                  '"$request" $status $body_bytes_sent '
                  '"$http_referer" "$http_user_agent"';

  keepalive_timeout       10m;
  sendfile                on;
  tcp_nopush              on;
  tcp_nodelay             on;
  client_max_body_size    50M;
  client_body_buffer_size 50M;

  ssl_prefer_server_ciphers on;
  add_header X-Frame-Options DENY;
  ssl_session_cache shared:SSL:10m;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers "AES256+EECDH:AES256+EDH";
  add_header X-Content-Type-Options nosniff;
  add_header Strict-Transport-Security "max-age=63072000; includeSubDomains";

  # ssl_stapling on;
  # resolver_timeout 5s;
  # ssl_stapling_verify on;
  # resolver $DNS-IP-1 $DNS-IP-2 valid=300s;

  <% if node[:roles].include?('desktop') %>
  gzip              off;
  <% else %>
  gzip              on;
  <% end %>
  gzip_static       on;
  gzip_http_version 1.1;
  gzip_proxied      any;
  gzip_vary         on;
  gzip_min_length   10;
  gzip_buffers      4  8k;
  gzip_types        text/event-stream text/plain text/css application/x-javascript text/xml image/svg+xml
                    application/json application/xml application/xml+rss text/javascript;

  upstream puma {
    server <%= node[:puma][:host] %>:<%= node[:puma][:port] %> fail_timeout=0;
  }

  <% if node[:roles].include?('desktop') %>
  upstream puma-test {
    server <%= node[:puma][:host] %>:<%= node[:puma_test][:port] %> fail_timeout=0;
  }

  <% end %>
  upstream events {
    server <%= node[:voice_push][:host] %>:<%= node[:voice_push][:port] %> fail_timeout=0;
  }

  upstream flashphoner {
    server <%= node[:flashphoner][:host] %>:<%= node[:flashphoner][:ws_port] %> fail_timeout=0;
  }

  upstream redisbackend {
    server <%= node[:redis][:host] %>:<%= node[:redis][:port] %> fail_timeout=0;
  }

  server {
    listen <%= node[:nginx][:fe_port] %> default deferred ssl;
    server_name <%= node[:hostname][/[^.]+/] %>.<%= node[:etc][:domain] %>;
    ssl_certificate_key server.key;
    ssl_certificate server.crt;

    access_log logs/nginx.log main;

    root <%= node[:voice_rails][:basedir] %>/public;
    set_from_accept_language $lang en de;

    try_files $uri/index.html $uri @wimdu;

    location @redis {
      set $redis_db "<%= node[:redis][:db][:nginx] %>";
      set $redis_key $lang-$request_uri;
      default_type text/html;
      redis_pass redisbackend;
      error_page 404 405 502 504 = @wimdu;
    }

    location ~ ^/phone_app {
      proxy_http_version 1.1;
      proxy_read_timeout 43200;
      chunked_transfer_encoding off;
      proxy_set_header Connection '';
      proxy_pass http://flashphoner;
      proxy_buffering off;
      proxy_cache off;
    }

    location ~ ^/events {
      proxy_http_version 1.1;
      proxy_read_timeout 43200;
      chunked_transfer_encoding off;
      proxy_set_header Connection '';
      proxy_pass http://events;
      proxy_buffering off;
      proxy_cache off;
    }

    location /data/ {
      add_header Cache-Control no-cache;
    }

<% if node[:roles].include?('desktop') %>
<% else %>
    location /record/ {
      add_header Cache-Control public;
      add_header ETag "";
      expires max;
    }

    location /images/ {
      add_header Cache-Control public;
      add_header ETag "";
      expires max;
    }

    location /assets/ {
      add_header Cache-Control public;
      add_header ETag "";
      gzip_static on;
      expires max;
    }

    location /index.html {
      add_header Cache-Control no-cache;
      expires 0;
    }

    error_page 500 502 503 504 /500.html;
    keepalive_timeout 60;

<% end %>
    location @wimdu {
      proxy_set_header  X-Forwarded-Proto https;
      proxy_set_header  X-Url-Scheme $scheme;
      proxy_set_header  Host $http_host;
      proxy_pass        http://puma;
      proxy_redirect    off;
    }
  }
<% if node[:roles].include?('desktop') %>

  server {
    listen <%= node[:capybara][:port] %>;
    server_name test-<%= node[:hostname][/[^.]+/] %>.<%= node[:etc][:domain] %>;

    access_log logs/nginx-test.log main;

    root <%= node[:voice_rails][:basedir] %>/public;
    try_files $uri/index.html $uri;

    location ~ ^/events {
      proxy_http_version 1.1;
      proxy_read_timeout 43200;
      chunked_transfer_encoding off;
      proxy_set_header Connection '';
      proxy_pass http://events;
      proxy_buffering off;
      proxy_cache off;
    }

    location / {
      proxy_set_header  X-Forwarded-Proto http;
      proxy_set_header  X-Url-Scheme $scheme;
      proxy_set_header  Host $http_host;
      proxy_pass        http://puma-test;
      proxy_redirect    off;
    }
  }
<% end %>
}
