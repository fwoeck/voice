daemon           on;
user             <%= node[:wim][:user] %>;
error_log        logs/error.log warn;
worker_processes 1;

env JDK_HOME;
env JAVA_HOME;
env JAVA_OPTS;
env JRUBY_OPTS;

events {
  worker_connections 1024;
  use epoll;
}

http {
  include       mime.types;
  default_type  application/octet-stream;
  server_tokens off;

  log_format main '$http_x_forwarded_for - $remote_user [$time_local] '
                  '"$request" $status $body_bytes_sent '
                  '"$http_referer" "$http_user_agent"';

  keepalive_timeout      10m;
  sendfile                on;
  tcp_nopush              on;
  tcp_nodelay             on;
  client_max_body_size    50M;
  client_body_buffer_size 50M;

  <% if node[:roles].include?('desktop') %>
  gzip              off;
  <% else %>
  gzip              on;
  <% end %>
  gzip_static       on;
  gzip_http_version 1.1;
  gzip_proxied      any;
  gzip_vary         on;
  gzip_min_length   10;
  gzip_buffers      4  8k;
  gzip_types        text/event-stream text/plain text/css application/x-javascript text/xml
                    application/json application/xml application/xml+rss text/javascript;

  upstream puma {
    server <%= node[:puma][:host] %>:<%= node[:puma][:port] %> fail_timeout=0;
  }

  <% if node[:roles].include?('desktop') %>
  upstream puma-test {
    server <%= node[:puma][:host] %>:<%= node[:puma_test][:port] %> fail_timeout=0;
  }

  <% end %>
  upstream events {
    server <%= node[:voice_push][:host] %>:<%= node[:voice_push][:port] %> fail_timeout=0;
  }

  upstream redisbackend {
    server <%= node[:redis][:host] %>:<%= node[:redis][:port] %> fail_timeout=0;
  }

  server {
    listen <%= node[:nginx][:fe_port] %> default deferred;
    server_name <%= node[:hostname][/[^.]+/] %>.<%= node[:etc][:domain] %>;

    access_log logs/nginx.log main;

    root <%= node[:wim][:rails][:basedir] %>/public;
    set_from_accept_language $lang en de;

    try_files $uri/index.html $uri @redis;

    location @redis {
      set $redis_db "<%= node[:redis][:db][:nginx] %>";
      set $redis_key $lang-$request_uri;
      default_type text/html;
      redis_pass redisbackend;
      error_page 404 405 502 504 = @wimdu;
    }

    location ~ ^/events {
      proxy_http_version 1.1;
      proxy_read_timeout 43200;
      chunked_transfer_encoding off;
      proxy_set_header Connection '';
      proxy_pass http://events;
      proxy_buffering off;
      proxy_cache off;
    }

    location / {
      proxy_set_header  X-Forwarded-Proto <%= node[:roles].include?('desktop') ? 'http' : 'https' %>;
      proxy_set_header  X-Url-Scheme $scheme;
      proxy_set_header  Host $http_host;
      proxy_pass        http://puma;
      proxy_redirect    off;
    }

    location /munin/www/ {
      expires modified +310s;
      root /var/cache/;
      <% unless node[:roles].include?('desktop') %>
      allow 127.0.0.1;
      deny all;
      <% end %>
    }

<% if node[:roles].include?('desktop') %>
<% else %>
    location /images/ {
      add_header Cache-Control public;
      add_header ETag "";
      expires max;
    }

    location /assets/ {
      add_header Cache-Control public;
      add_header ETag "";
      gzip_static on;
      expires max;
    }

    location /index.html {
      add_header Cache-Control no-cache;
      expires 0;
    }

    error_page 500 502 503 504 /500.html;
    keepalive_timeout 60;
<% end %>
  }
<% if node[:roles].include?('desktop') %>

  server {
    listen <%= node[:capybara][:port] %>;
    server_name test-<%= node[:hostname][/[^.]+/] %>.<%= node[:etc][:domain] %>;

    access_log logs/nginx-test.log main;

    root <%= node[:wim][:rails][:basedir] %>/public;
    try_files $uri/index.html $uri;

    location ~ ^/events {
      proxy_http_version 1.1;
      proxy_read_timeout 43200;
      chunked_transfer_encoding off;
      proxy_set_header Connection '';
      proxy_pass http://events;
      proxy_buffering off;
      proxy_cache off;
    }

    location / {
      proxy_set_header  X-Forwarded-Proto http;
      proxy_set_header  X-Url-Scheme $scheme;
      proxy_set_header  Host $http_host;
      proxy_pass        http://puma-test;
      proxy_redirect    off;
    }
  }
<% end %>
}
